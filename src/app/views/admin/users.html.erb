<h1>Manage users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>E-Mail</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td>
        <% if user.id == 1 %>
          <%= user.role.capitalize %>
        <% else %>
        <div class="btn-group" role="group" aria-label="choose role">
          <% User.roles.keys.each do |role|%>
          <%= link_to role.capitalize, users_change_role_path(user, role),
              class: "btn btn-default",
              type: "button",
              disabled: user.role?(role),
              method: :put,
              role: role %>
          <% end %>
        </div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
