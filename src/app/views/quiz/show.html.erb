<div class="quiz-show">
  <div class="container">
    <h2><%= @quiz.title %></h2>
    <div class="quiz-info">
      <p class="title">Quiz Info Here</p>
    </div>

    <% if current_user && current_user.teacher? %>
    	<p class="quiz-edit">
        <%= link_to "Edit Quiz", edit_quiz_path(@quiz.id) %>
        <%= link_to "Delete Quiz", delete_quiz_path(@quiz.id) %>
    	</p>
   	<% end %>
  </div>
</div>
