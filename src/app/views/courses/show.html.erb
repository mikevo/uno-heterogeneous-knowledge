<div class="course-show">
  <div class="container">
    <h2><%= @course.name %></h2>
    <div class="course-info">
      <h3>Teacher</h3>
      <span class="course-teacher"><%= @course.teacher.username %></span>
      <p>Course Info Here</p>
      
	  <div class="course-students">
        <h3>Students</h3>
        <ul>
        <% @course.students.each do |student| %>
          <li><%= student.username %></li>
        <% end %>
        </ul>
      </div>
	  
	  <div class="course-quizzes">
		<h3>Quizzes</h3>
		<ul>
		<% @course.quizzes.each do |quiz| %>
			<div class="quiz-card-wrapper col-sm-4">
				<div class="quiz-card">
					<div class="quiz-card-contents">
						<h2><%= quiz.title %></h2>
						<p><%= link_to "View Quiz", {:action => 'show', :id => quiz.id} %></p>
					</div>
				</div>
			</div>
		<% end %>
	  </div>
    </div>
    <% if can? :edit, Course %>
	<div class ="course-options">
    	<p class="course-edit">
        <%= link_to edit_course_path(@course), class: "btn btn-warning" do %>
          <i class="glyphicon glyphicon-edit"></i> Edit Course
        <% end %>
        <%= link_to course_path(@course),
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "btn btn-danger" do %>
          <i class="glyphicon glyphicon-remove-circle"></i> Delete Course
        <% end %>
    	</p>
	</div>
    <% end %>
  </div>
</div>
