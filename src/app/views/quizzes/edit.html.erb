<div class="quiz-edit">
  <div class="container">
    <%= form_for(@quiz) do |f| %>
      <div class="form-group">
        <label for="title">New Quiz Title</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <hr>
       <div>
       <h4> Questions </h4>
          <%= f.fields_for :questions do |task| %>
            <%= render 'question_fields', :f => task %>
          <% end %>
          <div class='links'>
            <%= link_to_add_association 'add questions', f, :questions %>
          </div>
        </div>

        <hr>
      <%= f.submit "Update", :class => "btn btn-primary" %>
    <% end %>
  </div>


</div>
